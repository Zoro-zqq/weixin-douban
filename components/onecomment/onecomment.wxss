.comment-group{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 40rpx;
}
.comment-group .left-comment{
  width: 70rpx;
  margin-right: 20rpx;
}
.left-comment image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.right-comment .username-rate{
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.right-comment .username-rate .username{
  font-size: 36rpx;
  margin-right: 10rpx;
}
.right-comment .release-time{
  margin: 12rpx 0;
  font-size: 30rpx;
  color: #b3b3b3;
}
.right-comment .content{
  line-height: 48rpx;
}