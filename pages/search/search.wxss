/* pages/search/search.wxss */
.item-group-list{
  padding: 10rpx 20rpx;
}
.item-group-list .item-group{
  display: flex;
  justify-content: flex-start;
  padding: 10rpx 0 ;
  border-bottom: 2rpx solid #ccc;
}
.item-group .thumbnail{
  width: 80rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.item-group .info-group{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.info-group .title{
  font-size: 32rpx;
}
.info-group .rate-year{
  font-size: 28rpx;
  color: #7b7b7b;
}

.history-list-group{
  padding: 10rpx 20rpx;
}

.history-title{
  display: flex;
  justify-content: space-between;
  background-color: #f9f9f9;
  color: #9e9e9e;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.history-group{
  padding: 20rpx 0;
  border-bottom: 1px solid #e4e4e4;
  font-size: 32rpx;
}